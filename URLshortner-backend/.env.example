# MongoDB Atlas Connection (Required)
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Environment (Optional)
NODE_ENV=production

# Frontend URL for CORS (Update after frontend deployment)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Custom domain (if you have one)
# CUSTOM_DOMAIN=yourdomain.com

# Port (Vercel sets this automatically)
PORT=8001

# Instructions for Vercel Deployment:
# 1. Add MONGODB_URI to Vercel Environment Variables
# 2. Add FRONTEND_URL after deploying frontend
# 3. These variables will be automatically injected into your app
FRONTEND_URL=https://your-frontend-url.vercel.app

# Custom Domain (Optional)
# CUSTOM_DOMAIN=yourdomain.com
